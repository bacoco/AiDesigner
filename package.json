{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "aidesigner",
  "version": "3.2.0",
  "description": "Universal AI agent framework with MCP integration - Chat naturally, get professional results",
  "keywords": [
    "ai",
    "ai-agents",
    "orchestrator",
    "development",
    "methodology",
    "agile",
    "mcp",
    "model-context-protocol",
    "agents",
    "workflow",
    "automation",
    "bmad",
    "invisible",
    "zero-knowledge",
    "natural-language",
    "claude",
    "gemini",
    "chatgpt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bacoco/aidesigner.git"
  },
  "license": "MIT",
  "author": "Loic Bacoco",
  "main": ".dev/tools/cli.js",
  "bin": {
    "aidesigner": "bin/aidesigner",
    "aidesigner-codex": "bin/aidesigner-codex"
  },
  "scripts": {
    "aidesigner": "node bin/aidesigner start",
    "aidesigner:claude": "node bin/aidesigner-claude",
    "aidesigner:codex": "node bin/aidesigner-codex",
    "aidesigner:opencode": "npx aidesigner opencode",
    "bmad": "npm run aidesigner --",
    "bmad:claude": "npm run aidesigner:claude --",
    "bmad:codex": "npm run aidesigner:codex --",
    "bmad:opencode": "npm run aidesigner:opencode --",
    "build": "node .dev/tools/cli.js build",
    "build:agents": "node .dev/tools/cli.js build --agents-only",
    "build:mcp": "tsc -p .dev/mcp/tsconfig.json && tsc -p .dev/config/tsconfig.codex.json && cp -r .dev/lib dist/mcp/ && node -e \"const fs=require('node:fs'); const path=require('node:path'); const dest=path.join('dist','mcp','tools'); fs.mkdirSync(dest,{recursive:true}); for (const file of ['mcp-registry.js','mcp-manager.js','mcp-profiles.js','mcp-security.js']) { fs.copyFileSync(path.join('.dev','tools',file), path.join(dest,file)); }\"",
    "build:teams": "node .dev/tools/cli.js build --teams-only",
    "codex": "node bin/aidesigner-codex",
    "fix": "npm run format && npm run lint:fix",
    "flatten": "node .dev/tools/flattener/main.js",
    "format": "prettier --config .dev/config/prettier.config.mjs --write \"**/*.{js,cjs,mjs,json,md,yaml}\"",
    "format:check": "prettier --config .dev/config/prettier.config.mjs --check \"**/*.{js,cjs,mjs,json,md,yaml}\"",
    "postinstall": "node .dev/tools/postinstall-build-mcp.js",
    "install:aidesigner": "node .dev/tools/installer/bin/aidesigner.js install",
    "install:bmad": "npm run install:aidesigner --",
    "lint": "eslint --config .dev/config/eslint.config.mjs . --ext .js,.cjs,.mjs,.yaml --max-warnings=0",
    "lint:fix": "eslint --config .dev/config/eslint.config.mjs . --ext .js,.cjs,.mjs,.yaml --fix",
    "list:agents": "node .dev/tools/cli.js list:agents",
    "mcp": "node dist/mcp/mcp/server.js",
    "mcp:add": "node .dev/tools/cli.js mcp add",
    "mcp:audit": "node .dev/tools/cli.js mcp audit",
    "mcp:browse": "node .dev/tools/cli.js mcp browse",
    "mcp:doctor": "node .dev/tools/cli.js mcp doctor",
    "mcp:install": "node .dev/tools/cli.js mcp install",
    "mcp:list": "node .dev/tools/cli.js mcp list",
    "mcp:profile:create": "node .dev/tools/cli.js mcp profile create",
    "mcp:profile:delete": "node .dev/tools/cli.js mcp profile delete",
    "mcp:profile:diff": "node .dev/tools/cli.js mcp profile diff",
    "mcp:profile:export": "node .dev/tools/cli.js mcp profile export",
    "mcp:profile:import": "node .dev/tools/cli.js mcp profile import",
    "mcp:profile:list": "node .dev/tools/cli.js mcp profile list",
    "mcp:profile:switch": "node .dev/tools/cli.js mcp profile switch",
    "mcp:remove": "node .dev/tools/cli.js mcp remove",
    "mcp:search": "node .dev/tools/cli.js mcp search",
    "mcp:secure": "node .dev/tools/cli.js mcp secure",
    "mcp:suggest": "node .dev/tools/cli.js mcp suggest",
    "prepack": "npm run build:mcp",
    "pre-release": "npm run validate && npm run format:check && npm run lint",
    "prepare": "husky",
    "preview:release": "node .dev/tools/preview-release-notes.js",
    "release:major": "gh workflow run \"Manual Release\" -f version_bump=major",
    "release:minor": "gh workflow run \"Manual Release\" -f version_bump=minor",
    "release:patch": "gh workflow run \"Manual Release\" -f version_bump=patch",
    "release:watch": "gh run watch",
    "setup:hooks": "chmod +x .dev/tools/setup-hooks.sh && ./.dev/tools/setup-hooks.sh",
    "test": "jest --config .dev/config/jest.config.cjs --runInBand",
    "validate": "node .dev/tools/cli.js validate",
    "version:all": "node .dev/tools/bump-all-versions.js",
    "version:all:major": "node .dev/tools/bump-all-versions.js major",
    "version:all:minor": "node .dev/tools/bump-all-versions.js minor",
    "version:all:patch": "node .dev/tools/bump-all-versions.js patch",
    "version:major": "node .dev/tools/version-bump.js major",
    "version:minor": "node .dev/tools/version-bump.js minor",
    "version:patch": "node .dev/tools/version-bump.js patch"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs}": [
      "eslint --config .dev/config/eslint.config.mjs --fix --max-warnings=0 --no-warn-ignored",
      "prettier --config .dev/config/prettier.config.mjs --write"
    ],
    "**/*.yaml": [
      "eslint --config .dev/config/eslint.config.mjs --fix",
      "prettier --config .dev/config/prettier.config.mjs --write"
    ],
    "**/*.{json,md}": [
      "prettier --config .dev/config/prettier.config.mjs --write"
    ]
  },
  "dependencies": {
    "@kayvan/markdown-tree-parser": "^1.6.1",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "comment-json": "^4.2.5",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "ignore": "^7.0.5",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "semver": "^7.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-yml": "^1.18.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "semantic-release": "24.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "yaml-eslint-parser": "^1.3.0",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
